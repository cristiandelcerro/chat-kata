<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userName" android:inputType="text" android:hint="@string/loginUserName"
            />
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/userPassword" android:inputType="textPassword" android:password="false"
            android:autoText="false" android:hint="@string/passwordName"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loginButtonName"
            android:id="@+id/loginButton" android:layout_gravity="center"
            android:onClick="onLoginButtonClicked"/>
</LinearLayout>