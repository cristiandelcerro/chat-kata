<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:baselineAligned="false"
              android:background="@drawable/fondo2">

    <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@android:id/list" android:stackFromBottom="true" android:layout_weight="0.8"
            android:scrollingCache="false"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:layout_weight="0.1">
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textToSend" android:layout_gravity="center" android:hint="@string/sendName"
                android:layout_weight="0.8"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sendButtonName"
                android:id="@+id/sendButton" android:layout_gravity="center" android:onClick="onSendButtonClicked"
                android:layout_weight="0.2"/>
    </LinearLayout>
</LinearLayout>